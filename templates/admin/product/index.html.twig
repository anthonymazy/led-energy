{% extends 'admin/base.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des produits</h1>

        <a class="btn btn-primary mb-5" href="{{ path('admin_product_create') }}">Ajouter un produit</a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Indroduction</th>
                <th>Description</th>
                <th>Spécifications</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.introduction }}</td>
                    <td>{{ product.description | slice(1, 20) }}</td>
                    <td>{{ product.specifications | slice(1, 20) }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('admin_product_update', { id: product.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('admin_product_delete', {id: product.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir supprimer ?');"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}