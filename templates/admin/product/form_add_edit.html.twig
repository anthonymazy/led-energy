{% extends 'admin/base.html.twig' %}

{% form_theme form with [
    'collection.html.twig',
    'bootstrap_4_layout.html.twig'
 ] %}

{% block body %}
    <div class="container">
        <h3 class="mt-5">{{ message }} un produit</h3>

        {{ form_start(form) }}

        {{ form_row(form.title) }}

        {{ form_row(form.introduction) }}

        {{ form_row(form.description) }}

        {{ form_row(form.specifications) }}

        {{ form_row(form.price) }}

        {{ form_row(form.imageFile) }}

        {{ form_row(form.category) }}

        {{ form_row(form.images) }}

        <button type="submit" class="btn btn-primary mt-3">{{ message }} le produit</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/admin/ad.js"></script>
{% endblock %}