{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">

                {% include 'partials/categories.html.twig' %}

                <div class="col-sm-9 padding-right">
                    <div class="features_items">
                        <h2 class="title text-center">Produits</h2>

                        {% if products is empty %}
                            <p>Il n'y a pas encore d'article dans cette catégorie</p>
                        {% else %}
                            {% for product in products %}
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="{{app.request.basepath}}/uploads//images/{{ product.coverImage }}" alt="{{ product.coverImage }}">
                                                <h2>{{ product.price }} €</h2>
                                                <p>{{ product.title }}</p>
                                                <a href="{{ path('show_product', {id: product.id, slug: product.slug}) }}" class="btn btn-default add-to-cart"><i class="fa fa-eye"></i>Voir produit</a>
                                            </div>
                                            <div class="product-overlay">
                                                <div class="overlay-content">
                                                    <h2>{{ product.price }} €</h2>
                                                    <p>{{ product.title }}</p>
                                                    <a href="{{ path('show_product', {id: product.id, slug: product.slug}) }}" class="btn btn-default add-to-cart"><i class="fa fa-eye"></i>Voir produit</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
