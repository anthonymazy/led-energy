{% block _product_images_widget %}
    <p>Ajoutez vos images</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <button type="button" id="add-image" class="btn btn-primary">
        <i class="fas fa-plus"></i>
        Ajouter une image
    </button>
{% endblock %}

{% block _product_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _product_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.imageFile) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.alt) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button data-action="delete" data-target="#block_{{ id }}" type="button" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}